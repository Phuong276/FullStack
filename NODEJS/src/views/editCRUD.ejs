<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">Edit a user</div>
            <form action="/put-crud" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-7">
                        <label for="inputEmail4">First name</label>
                        <input type="text" class="form-control" value="<%= user.firstName %>" name="firstName" placeholder="firstName">
                    </div>
                    <div class="form-group col-md-7">
                        <label for="inputPassword4">Last name</label>
                        <input type="text" class="form-control" value="<%= user.lastName %>" name="lastName" placeholder="lastName">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" value="<%= user.address %>" name="address" placeholder="1234 Main St">
                </div>
                <input name="id" value ="<%= user.id %>" type="text" hidden/>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>
</html>